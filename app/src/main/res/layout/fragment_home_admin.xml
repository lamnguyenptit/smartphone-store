<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeAdminFragment"
    android:background="@color/back_ground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">
        <TextView
            android:text="Smartphone"
            android:textSize="30dp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginTop="15dp">
            <TableRow>
                <TextView
                    android:text="Name:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etName"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Brand:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etBrand"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Chipset:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etChipset"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Ram:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etRam"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Price:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etPrice"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:text="Image:"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/etImage"
                    android:background="@drawable/my_edit_text"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/btAdd"
                android:text="Add"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple"/>
            <Button
                android:id="@+id/btGetAll"
                android:text="get all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:backgroundTint="@color/purple"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>